{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "./src",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceRoot": "./src",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "module": "CommonJS",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true
    },
    "exclude": ["node_modules", "tmp"]
}